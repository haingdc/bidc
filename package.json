{
  "name": "bidc",
  "version": "0.0.3",
  "description": "Bidirectional Channel for JavaScript",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunchee",
    "watch": "bunchee --watch",
    "dev": "bunchee --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "bidirectional",
    "channel",
    "communication",
    "javascript",
    "rpc",
    "async",
    "cross-context",
    "postmessage",
    "iframe",
    "worker"
  ],
  "author": "Shu Ding <g@shud.in>",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "bunchee": "^6.6.0",
    "devalue": "^5.3.2",
    "happy-dom": "^18.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.7.0+sha512.1d61f8c10e8a5a5dbfbddea0f1f5efb7dbd5177223073aec953cf230aa46416884b9427a6421dba78f28ad0f93fbede38ba57083237b350243de6b1e3a8ce71d",
  "pnpm": {
    "patchedDependencies": {
      "devalue@5.3.2": "patches/devalue@5.3.2.patch"
    }
  }
}
